doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        block style
    body 
        header.main-header
            nav.main-header_nav
                ul.main-header__item-list
                    li.main-header__item
                        //use javascript code to set a link as a active link 
                        a(href="/"  class=(path==="/" ? "active" : "")) shop  
                    li.main-header__item
                        a(href="/admin/item", class=(path==="/admin/test" ? "active" : "")) add-product

        block content
            
